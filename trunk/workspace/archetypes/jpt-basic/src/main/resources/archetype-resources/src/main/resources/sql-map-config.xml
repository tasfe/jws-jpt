<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMapConfig PUBLIC "-//ibatis.apache.org//DTD SQL Map Config 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-config-2.dtd">

<sqlMapConfig>
    
    <properties resource="jpt.properties" />
	
    <settings
    	enhancementEnabled="true"
    	maxTransactions="20"
    	maxRequests="32"
    	maxSessions="10" />

	<typeAlias alias="constant" type="${package}.model.Constant" />
	<typeAlias alias="dictionary" type="${package}.model.Dictionary" />
	<typeAlias alias="menu" type="${package}.model.Menu" />
	<typeAlias alias="permission" type="${package}.model.Permission" />
	<typeAlias alias="resource" type="${package}.model.Resource" />
	<typeAlias alias="role" type="${package}.model.Role" />
	<typeAlias alias="user" type="${package}.model.User" />

	<sqlMap resource="sqlmaps/declare/T007Constant.xml" />
	<sqlMap resource="sqlmaps/declare/T006Dictionary.xml" />
	<sqlMap resource="sqlmaps/declare/T005Menu.xml" />
	<sqlMap resource="sqlmaps/declare/T003Permission.xml" />
	<sqlMap resource="sqlmaps/declare/T004Resource.xml" />
	<sqlMap resource="sqlmaps/declare/T002Role.xml" />
	<sqlMap resource="sqlmaps/declare/T001User.xml" />
	
	<sqlMap resource="sqlmaps/statement/T000Misc.xml" />
	<sqlMap resource="sqlmaps/statement/T007Constant.xml" />
	<sqlMap resource="sqlmaps/statement/T006Dictionary.xml" />
	<sqlMap resource="sqlmaps/statement/T005Menu.xml" />
	<sqlMap resource="sqlmaps/statement/T003Permission.xml" />
	<sqlMap resource="sqlmaps/statement/T004Resource.xml" />
	<sqlMap resource="sqlmaps/statement/T002Role.xml" />
	<sqlMap resource="sqlmaps/statement/T001User.xml" />
	
</sqlMapConfig>