<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN"
    "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">
<validators>
	<field name="fields.menu.name">
		<field-validator type="requiredstring">
            <message key="errors.model.required"/>
        </field-validator>
        <field-validator type="stringlength">
			<param name="maxLength">50</param>
            <param name="trim">true</param>
            <message key="errors.model.maxlength"/>
        </field-validator>
    </field>
	<field name="fields.menu.url">
        <field-validator type="stringlength">
			<param name="maxLength">200</param>
            <param name="trim">true</param>
            <message key="errors.model.maxlength"/>
        </field-validator>
    </field>
	<field name="fields.menu.suburl">
        <field-validator type="stringlength">
			<param name="maxLength">200</param>
            <param name="trim">true</param>
            <message key="errors.model.maxlength"/>
        </field-validator>
    </field>
	<field name="fields.menu.img">
        <field-validator type="stringlength">
			<param name="maxLength">200</param>
            <param name="trim">true</param>
            <message key="errors.model.maxlength"/>
        </field-validator>
    </field>
	<field name="fields.menu.target">
        <field-validator type="stringlength">
			<param name="maxLength">20</param>
            <param name="trim">true</param>
            <message key="errors.model.maxlength"/>
        </field-validator>
    </field>
	<field name="fields.menu.displayOrder">
		<field-validator type="required">
            <message key="errors.model.required"/>
        </field-validator>
        <field-validator type="int">
            <message key="errors.model.int"/>
        </field-validator>
    </field>
</validators>
